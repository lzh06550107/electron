{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vite/client", "vue"]
  },
  "include": [
    "/src/**/*.ts",
    "/src/**/*.d.ts",
    "/src/**/*.tsx",
    "/src/**/*.vue",
    "*.d.ts"
  ],
  "exclude": ["node_modules"]
}
